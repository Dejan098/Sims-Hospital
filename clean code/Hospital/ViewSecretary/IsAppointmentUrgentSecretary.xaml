<Page x:Class="Hospital.ViewSecretary.IsAppointmentUrgentSecretary"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Hospital.ViewSecretary"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="IsAppointmentUrgentSecretary">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center">Želite li da zakažete hitan ili redovan termin?</TextBlock>
        <Button x:Name="regularAppointment" Grid.Row="1" Grid.Column="0" Height="60" Width="160" Click="regularAppointment_Click">Redovan termin</Button>
        <Button x:Name="urgentAppointment" Grid.Row="1" Grid.Column="1" Height="60" Width="160" Click="urgentAppointment_Click">Hitan termin</Button>
    </Grid>
</Page>
